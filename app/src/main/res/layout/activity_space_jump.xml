<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.happy.happyproject.ui.SpaceJumpActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/teach_appbar"
        android:layout_width="match_parent"
        android:layout_height="565dp">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:layout_scrollFlags="scroll|snap"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="565dp">
        <ImageView
            android:id="@+id/spacejump_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/spacejump_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_marginTop="260dp"
            android:text="你好"/>

    </android.support.v7.widget.CardView>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/teach_nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <com.happy.happyproject.ui.view.myListView
        android:id="@+id/spacejump_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/space_float_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        app:fabSize="normal"
        app:borderWidth="0dp"
        android:layout_marginBottom="190dp"
        app:layout_behavior="com.happy.happyproject.ui.view.TeachBehavior"
        android:src="@mipmap/btn_contact_designer"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#3d3939"
        app:layout_behavior="com.happy.happyproject.ui.view.BottomBehavior"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/space_pinglu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/btn_frag_user_customer_service"/>
            <TextView
                android:id="@+id/space_pinglu_num"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="你好"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/space_heart"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/btn_product_like_unselected"/>
            <TextView
                android:id="@+id/space_heart_num"
                android:gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="你好"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/space_shared"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/btn_product_share"/>
            <TextView
                android:id="@+id/space_shared_num"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="你好"/>
        </LinearLayout>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
