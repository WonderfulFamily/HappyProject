<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.happy.happyproject.myview.MineTopBar
        android:id="@+id/mine_setting_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/mine_setting_person"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:textColor="#000"
        android:gravity="center_vertical"
        android:text="个人信息"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#6aaa"/>
    <RelativeLayout
        android:id="@+id/service_pop_relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="清理缓存"
            android:textColor="#000"
            />
        <TextView
            android:layout_marginTop="19dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:text="2KB"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#aaa"/>
    <TextView
        android:id="@+id/mine_setting_problem"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:textColor="#000"
        android:gravity="center_vertical"
        android:text="常见问题"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#aaa"/>
    <TextView
        android:id="@+id/mine_setting_jiangwu"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:textColor="#000"
        android:gravity="center_vertical"
        android:text="关于匠物"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#aaa"/>
    <TextView
        android:id="@+id/mine_setting_advice"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:textColor="#000"
        android:gravity="center_vertical"
        android:text="意见反馈"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#aaa"/>

</LinearLayout>