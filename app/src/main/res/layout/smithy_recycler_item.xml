<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/smithy_recycler_image"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:src="@mipmap/bg_default_square"/>
    <TextView
        android:layout_marginTop="150dp"
        android:id="@+id/smithy_recycler_text"
        android:gravity="center"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="青谷和灯"/>
    <View
        android:layout_marginTop="181dp"
        android:layout_width="130dp"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="#d1c7c7"

        />
    <LinearLayout
        android:layout_marginTop="181dp"
        android:layout_width="150dp"
        android:orientation="horizontal"
        android:layout_height="30dp">
        <ImageView
            android:id="@+id/smithy_watch"
            android:layout_marginLeft="15dp"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_watch"/>
        <TextView
            android:id="@+id/smithy_watch_num"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="8sp"
            android:textColor="#baafaf"
            android:text="926"/>
        <ImageView
            android:id="@+id/smithy_like"
            android:layout_marginLeft="25dp"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_like"/>
        <TextView
          android:id="@+id/smithy_like_num"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="8sp"
            android:textColor="#baafaf"
            android:text="926"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/smithy_isnew"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
       android:layout_marginLeft="110dp"
        android:src="@mipmap/ic_new"/>
</android.support.v7.widget.CardView>